<hr />
<div class="reminders">
  <% if User.current.allowed_to?(:add_issue_reminder, project) %>
    <div class="contextual"><%= link_to(l(:label_add_reminder), new_rmp_reminder_path(:issue_id => issue.id)) %></div>
  <% end %>
  <p><strong><%= l(:field_reminders_plural) %></strong></p>
  <% if issue.reminds? %>
    <table class="list" style="border-width: 0;">
      <tbody>
        <% issue.rmp_reminders.each do |r| %>
          <tr>
            <% if User.current.allowed_to?(:view_issue_reminders, project) %>
              <td class="subject">
                <%= link_to(r.recurrence_to_s, edit_recurring_task_path(:id => r.id)) %>
              </td>
              <td>
                <%= "#{l(:label_next_scheduled_run)}: #{rt.next_scheduled_recurrence}" %>
              </td>
              <td class="buttons">
                <%= link_to(l(:button_edit), edit_recurring_task_path(:id => rt.id, :project_id => project.id), :class => 'icon icon-edit') %>
                <%= link_to(l(:button_delete), destroy_recurring_task_path(:id => rt.id, :project_id => project.id), :method => :delete, :class => 'icon icon-del') %>
              </td>
            <% else %>
                <td colspan=3><%= rt.recurrence_to_s %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>